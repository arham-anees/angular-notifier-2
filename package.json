{
  "name": "angular-notifier-3",
  "description": "A well designed, fully animated, highly customizable, and easy-to-use notification library for your Angular application.",
  "version": "18.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arham-anees/angular-notifier-3"
  },
  "keywords": [
    "angular",
    "angular2",
    "ng",
    "ng2",
    "notifier",
    "notification",
    "notifications",
    "toast",
    "toasts",
    "alert",
    "library"
  ],
  "scripts": {
    "build:demo": "ng build angular-notifier-3-demo --configuration production",
    "build:library": "rimraf -r dist && npm run build:library:angular && npm run build:library:sass && npm run build:library:css && npm run build:library:docs && npm run build:library:package",
    "build:library:angular": "ng build angular-notifier-3 --configuration production",
    "build:library:css": "sass projects/angular-notifier-3/src:dist/angular-notifier-3 --style=expanded",
    "build:library:docs": "copyfiles \"docs/**\" CHANGELOG.md MIGRATION-GUIDE.md LICENSE README.md \"dist/angular-notifier-3\"",
    "build:library:package": "node tools/update-package.js",
    "build:library:sass": "copyfiles \"projects/angular-notifier-3/src/**/*.scss\" \"dist/angular-notifier-3\" --up 3",
    "lint:library": "eslint projects/angular-notifier-3/src/**/*.ts --max-warnings 0",
    "lint:library:fix": "eslint projects/angular-notifier-3/src/**/*.ts --max-warnings 0 --fix",
    "start": "ng serve angular-notifier-3-demo",
    "test:library": "ng test angular-notifier-3",
    "test:library:upload-coverage": "codecov -f coverage/coverage-final.json"
  },
  "dependencies": {
    "tslib": "2.4.x"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@angular-builders/jest": "18.0.x",
    "@angular-devkit/build-angular": "18.0.x",
    "@angular/cli": "18.0.x",
    "@angular/common": "18.0.x",
    "@angular/compiler": "18.0.x",
    "@angular/compiler-cli": "18.0.x",
    "@angular/core": "18.0.x",
    "@angular/platform-browser": "18.0.x",
    "@angular/platform-browser-dynamic": "18.0.x",
    "@types/jest": "29.5.x",
    "@types/node": "16.x",
    "@types/web-animations-js": "2.2.x",
    "@typescript-eslint/eslint-plugin": "5.59.x",
    "@typescript-eslint/parser": "5.59.x",
    "codecov": "3.8.x",
    "copyfiles": "2.4.x",
    "eslint": "8.42.x",
    "eslint-config-prettier": "8.5.x",
    "eslint-plugin-import": "2.26.x",
    "eslint-plugin-prettier": "4.2.x",
    "eslint-plugin-simple-import-sort": "8.0.x",
    "jest": "29.5.x",
    "ng-packagr": "18.2.1",
    "prettier": "2.7.x",
    "rimraf": "3.0.x",
    "rxjs": "7.5.x",
    "sass": "1.54.x",
    "ts-node": "10.9.x",
    "typescript": "5.4.5",
    "zone.js": "0.14.x"
  }
}
